<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/audio_list_height"
    android:gravity="center_vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/audio_list_height"
        android:gravity="center_vertical">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/image"
                android:layout_width="@dimen/audio_album_size"
                android:layout_height="@dimen/audio_album_size"
                android:src="@drawable/model"
                android:scaleType="fitXY"
                android:layout_gravity="center" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/albumname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="left"
                    />
                <TextView
                    android:singleLine="true"
                    android:id="@+id/albumartist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:text="Adele"
                    android:textColor="@color/audio_list_vivid"
                    android:textSize="12sp"
                    android:gravity="left"
                    />
                <TextView
                    android:singleLine="true"
                    android:id="@+id/myalbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Updated 2015"
                    android:textColor="@color/audio_list_light"
                    android:textSize="12sp"
                    android:gravity="left"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/audio_list_height"
        android:layout_height="@dimen/audio_list_height"
        android:id="@+id/topsongsoptions"
        android:scaleType="fitXY"
        android:src="@mipmap/option"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="@dimen/audio_list_height"
        android:layout_height="@dimen/audio_list_height"
        android:id="@+id/playstatus"
        android:scaleType="fitXY"
        android:src="@mipmap/option"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/topsongsoptions"
        android:layout_toStartOf="@+id/topsongsoptions" />

</RelativeLayout>