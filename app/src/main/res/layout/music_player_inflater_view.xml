<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="@dimen/playlist_gap2"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#404141"
    android:layout_height="@dimen/player_avatar_size"
    android:id="@+id/player"
    android:gravity="center_vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/player_avatar_size"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/player_avatar_size"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/player_avatar_size"
                android:layout_height="@dimen/player_avatar_size"
                android:scaleType="fitXY"
                android:src="@drawable/model" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/playlist_gap2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Song_title"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/song_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Singer"
                    android:textColor="@color/audio_list_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="@dimen/player_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/play"
            android:layout_marginRight="@dimen/playlist_gap2"
            android:scaleType="fitXY"
            android:src="@mipmap/audio_next" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="@dimen/player_icon_size"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/next"
            android:layout_toStartOf="@+id/next"
            android:scaleType="fitXY"
            android:src="@mipmap/audioplay" />


    </RelativeLayout>


</LinearLayout>